---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contacto',
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText tagline="Contacto" title="Hablemos de tu proyecto" />

  <ContactUs
    title="Déjanos un mensaje."
    subtitle="Para respuestas más rápidas, explora nuestra sección de Preguntas Frecuentes, seguro encontrarás la respuesta que buscas. En caso de que no, llámanos. Estaremos gustosos de atenderte."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Nombre',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
      },
    ]}
    textarea={{
      label: 'Mensaje',
    }}
    disclaimer={{
      label:
        'Al enviar este formulario, reconoces y aceptas la recopilación de tu información personal.',
    }}
    description="Nuestro equipo de soporte normalmente responde los mensajes dentro de 24 horas laborables."
    button="Contáctanos"
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="¡Estamos aquí para ayudar!"
    items={[
      {
        title: 'Soporte general',
        description: `Chatea con nosotros para consultas relacionadas con la administración de cuentas, navegación del sitio web, problemas de pago, acceso a productos comprados o preguntas generales sobre la funcionalidad del sitio web.`,
      },
      {
        title: 'Contactar a ventas',
        description:
          'Chatea con nosotros si tienes preguntas sobre compras, opciones de personalización, licencias para uso comercial, consultas sobre productos o servicios específicos, etc.',
      },
      {
        title: 'Soporte técnico',
        description:
          'Chatea con nosotros cuando tengas problemas como instalación o configuración de productos, errores de descarga, u otros desafíos técnicos relacionados con el uso de nuestros productos o servicios.',
      },
      {
        title: 'Teléfono',
        description: '+593 (9) 99-563-2739',
        icon: 'tabler:headset',
      },
      {
        title: 'Email',
        description: 'ventas@bisstox.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Ubicación',
        description: 'Avenida 5ª SO 3005, Guayaquil, Ecuador',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
